<%- include("../includes/head.ejs") %>
    </head>

    <body class="bg-gray-50">
        <%- include("../includes/navigation.ejs") %>
            <main class="max-w-xl mx-auto mt-10 p-6 bg-white shadow-md rounded">
                <h1 class="text-2xl font-semibold mb-4">Adicionar Produto</h1>
                <form class="space-y-4" action="/admin/add-product" method="POST">
                    <div>
                        <label for="title" class="block text-gray-700 mb-1">Title</label>
                        <input type="text" name="title" id="title" placeholder="Title"
                            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label for="title" class="block text-gray-700 mb-1">Image URL</label>
                        <input type="text" name="imageUrl" id="imageUrl" placeholder="Image URL"
                            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label for="title" class="block text-gray-700 mb-1">Price</label>
                        <input type="number" name="price" id="price" placeholder="Price" step="0.01"
                            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label for="title" class="block text-gray-700 mb-1">Description</label>
                        <textarea type="text" name="description" id="description" placeholder="Description" rows="4"
                            class="w-full px-4 py-2  border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                    </div>
                    <button type="submit"
                        class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Adicionar</button>
                </form>
            </main>
            <%- include("../includes/end.ejs") %>